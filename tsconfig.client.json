{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/index.ts",
    "src/types.ts",
    "src/app.ts",
    "src/emoji.ts",
    "src/client-side/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/server-side/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}