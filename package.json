{
  "name": "@ara-web/crypto-sockets",
  "version": "1.0.0",
  "description": "Crypto sockets client and server for blockchain gateway communication",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src/server-side",
    "src/app.ts",
    "src/emoji.ts",
    "README.md"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-client": "tsc -p tsconfig.client.json",
    "build": "npm run build-client",
    "prepublishOnly": "npm run build-client",
    "dev": "NODE_ENV=development tsx src/server-side/server.ts",
    "hello-server": "ts-node src/client-side/hello.ts",
    "create-project": "ts-node src/client-side/create-project.ts",
    "set-withdrawer": " ts-node src/client-side/set-withdrawer.ts",
    "withdrawer-info": " ts-node src/client-side/get-withdrawer.ts",
    "withdraw": " ts-node src/client-side/withdraw.ts",
    "cascade-info": " ts-node src/client-side/cascade-info.ts",
    "set-cascade-withdrawer": " ts-node src/client-side/set-cascade-withdrawer.ts",
    "cascade-withdraw": " ts-node src/client-side/cascade-withdraw.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ara-foundation/crypto-sockets.git"
  },
  "author": "Medet Ahmetson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ara-foundation/crypto-sockets/issues"
  },
  "homepage": "https://github.com/ara-foundation/crypto-sockets#readme",
  "devDependencies": {
    "@types/node": "^24.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@ara-web/cascadefund-smartcontracts": "^0.0.1",
    "@ara-web/smartcontracts": "^1.0.1",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "zeromq": "^6.5.0"
  }
}